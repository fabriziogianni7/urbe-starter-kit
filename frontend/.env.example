# Frontend Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# CIVIC AUTHENTICATION
# =============================================================================
# Get your Civic client ID from: https://dashboard.civic.com
VITE_CIVIC_CLIENT_ID=your_civic_client_id_here
VITE_CIVIC_REDIRECT_URI=http://localhost:3000/auth/callback

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================
# Network configuration
VITE_CHAIN_ID=11155111  # Sepolia testnet (change for other networks)
VITE_RPC_URL=https://sepolia.infura.io/v3/your_infura_project_id

# Alternative RPC providers
# VITE_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your_alchemy_key
# VITE_RPC_URL=https://rpc.sepolia.org

# =============================================================================
# SMART CONTRACT ADDRESSES
# =============================================================================
# These will be populated after contract deployment
VITE_CONTRACT_ADDRESS=
VITE_SIMPLE_STORAGE_ADDRESS=
VITE_TOKEN_ADDRESS=

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Development server
VITE_DEV_SERVER_PORT=3000
VITE_DEV_SERVER_HOST=localhost

# Debug mode
VITE_DEBUG_MODE=true

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
# Optional: Analytics services
VITE_ANALYTICS_ID=
VITE_SENTRY_DSN=

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
VITE_ENABLE_CIVIC_AUTH=true
VITE_ENABLE_WALLET_CONNECT=true
VITE_ENABLE_CONTRACT_INTERACTION=true
VITE_ENABLE_ANALYTICS=false

# =============================================================================
# UI/UX CONFIGURATION
# =============================================================================
# Theme and UI settings
VITE_APP_NAME=Web3 Starter Kit
VITE_APP_DESCRIPTION=A comprehensive Web3 starter kit for students
VITE_APP_VERSION=1.0.0

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Security settings
VITE_ENABLE_HTTPS_ONLY=false  # Set to true in production
VITE_ENABLE_CSP=true  # Content Security Policy

# =============================================================================
# CACHING & PERFORMANCE
# =============================================================================
# Cache settings
VITE_CACHE_DURATION=300000  # 5 minutes in milliseconds
VITE_MAX_CACHE_SIZE=50  # Maximum number of cached items

# =============================================================================
# NOTIFICATIONS
# =============================================================================
# Notification settings
VITE_ENABLE_NOTIFICATIONS=true
VITE_NOTIFICATION_DURATION=5000  # 5 seconds

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================
# Supported networks
VITE_SUPPORTED_NETWORKS=1,11155111,137,42161  # Mainnet, Sepolia, Polygon, Arbitrum

# Network names for UI
VITE_NETWORK_NAMES={"1":"Ethereum","11155111":"Sepolia","137":"Polygon","42161":"Arbitrum"}

# =============================================================================
# CIVIC SPECIFIC CONFIGURATION
# =============================================================================
# Civic authentication settings
VITE_CIVIC_ENVIRONMENT=development  # development, staging, production
VITE_CIVIC_AUTO_LOGIN=false
VITE_CIVIC_REMEMBER_ME=true

# Civic supported login methods
VITE_CIVIC_ENABLE_GOOGLE=true
VITE_CIVIC_ENABLE_APPLE=true
VITE_CIVIC_ENABLE_EMAIL=true
VITE_CIVIC_ENABLE_WALLET=true

# =============================================================================
# WAGMI CONFIGURATION
# =============================================================================
# Wagmi settings
VITE_WAGMI_AUTO_CONNECT=true
VITE_WAGMI_CONNECTOR_PRIORITY=injected,walletConnect,coinbaseWallet

# =============================================================================
# CONTRACT INTERACTION SETTINGS
# =============================================================================
# Gas settings
VITE_DEFAULT_GAS_LIMIT=300000
VITE_MAX_GAS_PRICE=100000000000  # 100 gwei

# Transaction settings
VITE_TRANSACTION_TIMEOUT=60000  # 60 seconds
VITE_MAX_RETRIES=3

# =============================================================================
# ERROR HANDLING
# =============================================================================
# Error reporting
VITE_ENABLE_ERROR_REPORTING=false
VITE_ERROR_REPORTING_URL=

# Error message customization
VITE_USER_FRIENDLY_ERRORS=true
VITE_SHOW_TECHNICAL_ERRORS=false

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Development tools
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_CONTRACT_DEBUGGER=true
VITE_ENABLE_TRANSACTION_LOGGER=true

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
# Backup settings
VITE_ENABLE_AUTO_BACKUP=false
VITE_BACKUP_INTERVAL=86400000  # 24 hours in milliseconds

# =============================================================================
# CUSTOMIZATION
# =============================================================================
# Custom branding
VITE_APP_LOGO_URL=
VITE_APP_FAVICON_URL=
VITE_APP_PRIMARY_COLOR=#3B82F6
VITE_APP_SECONDARY_COLOR=#1F2937

# Custom text
VITE_APP_WELCOME_MESSAGE=Welcome to the Web3 Starter Kit!
VITE_APP_LOADING_MESSAGE=Loading your Web3 experience...
