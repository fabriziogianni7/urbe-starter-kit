# Web3 Starter Kit Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Private key for contract deployment (NEVER commit this to git!)
# Only use for deployment, not for development
DEPLOYER_PRIVATE_KEY=

# Etherscan API key for contract verification
ETHERSCAN_API_KEY=

# Infura/Alchemy project ID for deployment
INFURA_PROJECT_ID=
ALCHEMY_API_KEY=

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test network configuration
TEST_CHAIN_ID=31337  # Hardhat/Anvil local network
TEST_RPC_URL=http://localhost:8545

# Test accounts (for local development)
TEST_PRIVATE_KEY_1=
TEST_PRIVATE_KEY_2=

# =============================================================================
# FOUNDRY CONFIGURATION
# =============================================================================
# Foundry settings
FOUNDRY_PROFILE=default
FOUNDRY_VERBOSE=false

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================
# Default networks for deployment
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your_alchemy_key
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/your_infura_project_id
POLYGON_RPC_URL=https://polygon-rpc.com
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc

# =============================================================================
# CONTRACT DEPLOYMENT
# =============================================================================
# Contract deployment settings
DEPLOYMENT_GAS_LIMIT=3000000
DEPLOYMENT_GAS_PRICE=auto

# Contract verification settings
VERIFY_CONTRACTS=true
VERIFY_ETHERSCAN_API_KEY=

# =============================================================================
# SECURITY
# =============================================================================
# Security settings for deployment
ENCRYPT_PRIVATE_KEY=false
SAFE_PRIVATE_KEY_STORAGE=false

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Logging settings
LOG_LEVEL=info
ENABLE_CONTRACT_LOGGING=true

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
# Backup settings
ENABLE_AUTO_BACKUP=false
BACKUP_INTERVAL=86400000  # 24 hours in milliseconds
